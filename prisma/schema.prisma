generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name      String
  email     String      @unique
  password  String
}

model Invoices {
  id          String      @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  customerId  String      @db.Uuid
  amount      Int
  status      String
  date        DateTime    @default(now())   

  customers   Customers   @relation(fields: [customerId], references: [id])
}

model Customers {
  id          String      @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name        String
  email       String      @unique
  image_url   String

  invoices    Invoices[]
}

model Revenue {
  month      String       @unique
  revenue    Int
}